root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.{kt,kts}]
disabled_rules = no-wildcard-imports,experimental:annotation,filename

[*.{yml,yaml}]
indent_size = 2
