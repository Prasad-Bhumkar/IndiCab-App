<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/pickupLocationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pickup Location" />

    <Spinner
        android:id="@+id/dropLocationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Drop Location" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/tripTypeSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/oneWayRadio" android:text="One Way" />
        <RadioButton android:id="@+id/roundTripRadio" android:text="Round Trip" />
    </RadioGroup>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/carList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/calculateFareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Fare" />

    <Button
        android:id="@+id/bookNowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Now" />

    <!-- Modal for Fare Details -->
    <LinearLayout
        android:id="@+id/fareDetailsModal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <!-- Modal content goes here -->
    </LinearLayout>
</LinearLayout> 
